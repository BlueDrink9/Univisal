{
  "version": 1,
  "disable_existing_loggers": false,
  "log_directory": "ext://tempfile.gettempdir",
  "custom_handler": "logger.myLogHandler",
  "formatters": {
    "simple": {
      "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s"
    }
  },

  "handlers": {
    "console": {
      "class": "logging.StreamHandler",
      "level": "DEBUG",
      "formatter": "simple",
      "stream": "ext://sys.stdout"
    },

    "debug_file_handler": {
      "class": "cfg://custom_handler",
      "level": "DEBUG",
      "formatter": "simple",
      "filename": "debug.log",
      "maxBytes": 10485760,
      "backupCount": 2,
      "encoding": "utf8"
    },

    "info_file_handler": {
      "class": "cfg://custom_handler",
      "level": "INFO",
      "formatter": "simple",
      "filename": "info.log",
      "maxBytes": 10485760,
      "backupCount": 10,
      "encoding": "utf8"
    },

    "error_file_handler": {
      "class": "cfg://custom_handler",
      "level": "ERROR",
      "formatter": "simple",
      "filename": "errors.log",
      "maxBytes": 10485760,
      "backupCount": 10,
      "encoding": "utf8"
    },

    "critical_file_handler": {
      "class": "cfg://custom_handler",
      "level": "CRITICAL",
      "formatter": "simple",
      "filename": "CRITICAL.log",
      "maxBytes": 10485760,
      "backupCount": 10,
      "encoding": "utf8"
    }

  },

  "loggers": {
    "my_module": {
      "level": "ERROR",
      "handlers": ["console"],
      "propagate": false
    }
  },

  "root": {
    "level": "DEBUG",
    "filename": "univisal.log",
    "handlers": ["console", "debug_file_handler", "info_file_handler", "error_file_handler", "critical_file_handler"]
  }
}
